{
  "name": "readl-electron",
  "version": "0.1.0",
  "description": "Electron app to paste text and play Kokoro TTS audio",
  "main": "main/main.js",
  "build": {
    "appId": "com.readl.app",
    "productName": "Readl",
    "asar": true,
    "npmRebuild": false,
    "publish": null,
    "extraResources": [],
    "files": [
      "index.html",
      "main/**/*",
      "preload/**/*",
      "renderer.js",
      "kokoro-engine.js",
      "kokoro-worker.js",
      "tokens.json",
      "node_modules/**/*",
      "!node_modules/@napi-rs/canvas*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "identity": null
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  },
  "private": true,
  "scripts": {
    "start": "electron .",
    "dist:mac": "npm --prefix ../kokoro.js run build && CSC_IDENTITY_AUTO=false electron-builder --mac dmg --publish=never",
    "dist:win": "npm --prefix ../kokoro.js run build && electron-builder --win nsis portable --publish=never",
    "dist:linux": "npm --prefix ../kokoro.js run build && electron-builder --linux AppImage --publish=never"
  },
  "devDependencies": {
    "electron": "^39.2.0",
    "electron-builder": "^26.0.12"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "dompurify": "^3.2.7",
    "jsdom": "^27.0.0",
    "kokoro-js": "file:../kokoro.js",
    "pdfjs-dist": "^5.4.296",
    "tinymce": "^8.3.0"
  }
}
